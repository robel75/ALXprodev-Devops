#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

fetch_pokemon() {
    local pokemon=$1
    local file="$OUTPUT_DIR/$pokemon.json"
    echo "Fetching data for $pokemon..."
    curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$file"

    if [ -s "$file" ]; then
        echo "Saved data to $file"
    else
        echo "Failed to fetch data for $pokemon"
        rm -f "$file"
    fi
}

PIDS=()
for pokemon in "${POKEMONS[@]}"; do
    fetch_pokemon "$pokemon" &
    PIDS+=($!)
done

echo "Background jobs running:"
jobs

for pid in "${PIDS[@]}"; do
    kill -0 $pid 2>/dev/null
done

for pid in "${PIDS[@]}"; do
    wait $pid
done

echo "All Pok√©mon data fetched."

